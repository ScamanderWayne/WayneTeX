\NewDocumentCommand{\wextbf}{m}{%
    {\subsection*{\vspace{-5pt}\hspace{-7pt}\noindent\colorbox{WPP}{\color{DP}{#1}}}}
    \addcontentsline{toc}{subsection}{\color{WPP}#1}% Add to TOC as subsection
}

\NewDocumentCommand{\textbw}{m}{%
    {\color{WPP}{#1}}
}

\NewDocumentCommand{\textww}{m}{%
    {\color{WPP}\textbw{#1}}
}

\NewDocumentCommand{\wemph}{m}{%
    {\color{WPP}\emph{#1}}
}

\NewDocumentCommand{\mysection}{m m}{%
    \setlength\fboxsep{4pt} % spacing around box contents
    {\section*{\colorbox{DP}{\makebox[\dimexpr\textwidth-2\fboxsep\relax]{\color{WPP}#1\hfill#2}}}\vspace{4pt}}
    \addcontentsline{toc}{section}{\colorbox{WPP}{\color{DP}#1}}% Add to TOC as subsection
}

\NewDocumentCommand{\waybox}{m m}{%
    \vspace*{-2pt}\begin{mdframed}[backgroundcolor=DP,%
        linecolor=WPP,%
        linewidth=2pt,%
        innertopmargin=5pt,%
        innerbottommargin=5pt,%
        innerleftmargin=5pt,%
        innerrightmargin=5pt]\color{white}%
        \wextbf{#1}\par%
        #2%
    \end{mdframed}%
}

\NewDocumentCommand{\wayitem}{m m}{%
    \begin{itemize}[leftmargin=*]\setlength\itemsep{#2}%
        #1%
    \end{itemize}%
}

\NewDocumentCommand{\wtem}{m}{%
    \item \textbw{#1} --%
}

