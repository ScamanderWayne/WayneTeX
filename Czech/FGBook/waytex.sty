% Define the custom command \wart
\NewDocumentCommand{\wart}{m m o o o o o}{%
  \noindent % Prevent paragraph indentation
  {\normalfont\Large\bfseries
      {\colorbox{#4}{\color{#5}#2}\colorbox{#5}{\color{#4} -- #1}}\hfill%
      {\colorbox{#4}{\color{#5}\normalfont\tiny\textsc{\theauthor}}}\par%
  }% Main output
  \IfValueT{#4}{\csdef{wartCurrentValue}{#4}} % Store #3 globally if provided
  \addtocontents{toc}{\protect\contentsline{section}{\normalfont\fontsize{7pt}{8pt}\selectfont{\color{#6}\textbf{\IfValueTF{#3}{#2}{$\Rightarrow$ #2}}}{\color{#7}-- \textit{#1} \IfValueTF{#3}{(#3)}{}}}{\color{#6}\thepage}{}}
  \label{wart:#1:#2} % Adds a unique label for this wart
}

