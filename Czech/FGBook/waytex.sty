\NewDocumentCommand{\wtoc}{m m}{%
  \renewcommand{\contentsname}{%
	\WIDTF{%
	{\color{DTOC}#1}%
	\colorbox{DTOC}{\color{DWS}\strut#2}%
	\hfill \normalfont\tiny\textsc{\colorbox{DTOC}{\color{DWS}\theauthor}}
	}{%
